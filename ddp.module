      'Male',
      'Female',
    ),
  );
  $form['weight'] = array(
    '#required' => TRUE,
    '#type' => 'textfield',
    '#title' => t('weight'),
    '#description' => 'weight in kg',
  );
  $form['width'] = array(
    '#required' => TRUE,
    '#type' => 'textfield',
    '#title' => t('width'),
    '#description' => 'width in meters',
  );
  $form['birthdate'] = array(
    '#required' => TRUE,
    '#type' => 'date',
    '#title' => t('Birth Date'),
  );
  $form['tmb'] = array(
    '#required' => TRUE,
    '#type' => 'select',
    '#options' => array(
      '1.2' => 'SedentÃ¡rio',
